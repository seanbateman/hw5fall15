%h1 The following movies having "#{@s}" were found on TMDB
= form_tag movies_add_tmdb_path do
    %table#movies
        %thead
            %tr
                %th Movie Title
                %th Release Date
                %th Select Movies
        %thead
            - @movies.each do |movie|
                %tr
                    %td= movie[:title]
                    %td= movie[:release_date]
                    %td= check_box_tag "tmdb_movies[#{movie[:id]}]"
                    
    = submit_tag "Add Selected Movies"
= link_to 'Return to Movie List', movies_path